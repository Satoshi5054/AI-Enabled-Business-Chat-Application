generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  user_id       String    @id @default(uuid())
  user_email    String    @unique
  user_name     String
  user_password String
  createdAt     DateTime  @default(now())

  messages      Message[]
  chatMembers   ChatMember[]
}

model ChatRoom {
  chat_id     String       @id @default(uuid())
  chat_name   String
  createdAt   DateTime     @default(now())

  messages    Message[]
  members     ChatMember[]
}

model ChatMember {
  id        String   @id @default(uuid())
  userId    String
  chatId    String

  user      User     @relation(fields: [userId], references: [user_id])
  chatRoom ChatRoom @relation(fields: [chatId], references: [chat_id])

  @@unique([userId, chatId])
}

model Message {
  message_id      String   @id @default(uuid())
  content         String
  senderId        String
  roomId          String
  createdAt       DateTime @default(now())

  sender          User     @relation(fields: [senderId], references: [user_id])
  room            ChatRoom @relation(fields: [roomId], references: [chat_id])

  @@index([roomId, createdAt])
}
