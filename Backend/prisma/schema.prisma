generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
}

model ChatRoom {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
}

model Message {
  id        String   @id @default(uuid())
  content   String
  senderId  String
  roomId    String
  createdAt DateTime @default(now())
}
