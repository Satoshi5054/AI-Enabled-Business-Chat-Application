generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  userId       String    @id @default(uuid())
  userEmail    String    @unique
  userName     String
  userPassword String
  createdAt     DateTime  @default(now())

  messages      Message[]
  chatMembers   ChatMember[]
}

model ChatRoom {
  chatId     String       @id @default(uuid())
  chatName   String
  createdAt   DateTime     @default(now())

  messages    Message[]
  members     ChatMember[]
}

model ChatMember {
  id        String   @id @default(uuid())
  userId    String
  chatId    String

  user      User     @relation(fields: [userId], references: [userId])
  chatRoom ChatRoom @relation(fields: [chatId], references: [chatId])

  @@unique([userId, chatId])
}

model Message {
  messageId      String   @id @default(uuid())
  content         String
  senderId        String
  roomId          String
  createdAt       DateTime @default(now())

  sender          User     @relation(fields: [senderId], references: [userId])
  room            ChatRoom @relation(fields: [roomId], references: [chatId])

  @@index([roomId, createdAt])
}
